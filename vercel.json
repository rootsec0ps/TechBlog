{
    "version": 2,
    "builds": [
        {
            "src": "tech_blog/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3", "buildCommand": "bash build_files.sh" }
        },
        {
        "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": { 
                "distDir": "static"
            }
        }
    ],
    "routes": [

        {
            "src": "/(.*)",
            "dest": "tech_blog/wsgi.py"
        }
    ],
    "outputDirectory": "static"
}
