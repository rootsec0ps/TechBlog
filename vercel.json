{
    "version": 2,
    "builds": [
        {
            "src": "tech_blog/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3", "buildCommand": "bash build_files.sh" }
        },
        {
        "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": { 
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "tech_blog/wsgi.py"
        }
    ],
    "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api"
    }
    ]
}